default:
    @{{just_executable()}} --list

docker-build:
    docker build -f docker/superlink/Dockerfile -t "superlink:latest" .

docker-build-distroless:
    docker build -f docker/superlink/Dockerfile --build-arg base_image=distroless -t "superlink:latest" .

docker-run:
    docker run --rm -p 50051:50051 "superlink:latest"

docker-compose:
    docker-compose -f docker/compose.yml up --remove-orphans

generate-schema:
    diesel \
    --database-url 'postgres://root:pw@localhost:5432/flwr'  \
    print-schema > rust/src/state/schema.rs
